<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <a href="/admin/product/new">Add</a>
    <br>
      <table border=1>
        <thead>
          <tr>
            <th>Id</th>
            <th>Nama</th>
            <th>Harga</th>
            <th>Berat</th>
            <th>Imaeg</th>
            <th>Image URL</th>
            <th>Action</th>
        </thead>
        <tbody>
          <% for(var i=0;i<productsText.length;i++){ %>
            <tr>
              <td><%= productsText[i].id %></td>
              <td><%= productsText[i].nama %></td>
              <td><%= productsText[i].harga %></td>
              <td><%= productsText[i].berat %></td>
              <td><img src="<%= productsText[i].img_url %>" height="60" width="100"></td>
              <td><%= productsText[i].img_url %></td>
              <td>
                <a href="/admin/product/edit/<%= productsText[i].id %>">Edit</a> <a href="/admin/product/delete/<%= productsText[i].id %>" onClick="return confirm('Are you sure you want to delete this product?')">Delete</a>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
  </body>
</html>
