<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
      nav {
        float: right;
        max-width: 350px;
        margin: 0;
        padding: 1;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
    <form method="post">
    <nav >
      <h3>Barang yang dibeli</h3>
      <table border=1>
        <thead>
          <tr>
            <th>Jumlah</th>
            <th>Nama</th>
            <th>ID Barang</th>
            <th>Berat</th>
            <th>Harga</th>
        </thead>
        <tbody>
          <% for(var i=0;i<cartText.length;i++){ %>
            <tr>
            <td><%= cartText[i].quantity %></td>
              <td><%= cartText[i].nama %></td>
                <td><%= cartText[i].id %></td>
                  <td><%= cartText[i].berat %></td>
              <td><%= cartText[i].harga %></td>
            </tr>
            <% } %>
        </tbody>

      </table>
      <div> Total harga : <%= totalHargaText %> </div>
      <div> Total Ongkir : <%= totalOngkirText %> </div>
      <div> Total yang harus dibayar : <%= totalAllText %> </div>
    </nav>

      <h3>Data Customer</h3>

            <table >

                  <tr>
                    <td>Id Transaksi :</td>
                    <td><input type="text" disabled="true" value="<%= transText.id %>"></td>
      </tr>
      <tr>
                      <td>Nama :</td>
                      <td><input type="text" disabled="true" value="<%= transText.nama %>"></td>
                    </tr>
                    <tr>
                        <td>Email :</td>
                        <td><input type="text" disabled="true" value="<%= transText.email %>"></td>
                      </tr>
                      <tr>
                          <td>Alamat :</td>
                          <td><textarea disabled="true" ><%= transText.alamat %></textarea></td>
                        </tr>
                        <tr>
                            <td>Kota :</td>
                            <td><input type="text" disabled="true" value="<%= transText.kota %>"></td>
                  </tr>
                  <tr>
                      <td>Telepon :</td>
                      <td><input type="text" disabled="true" value="<%= transText.telepon %>"></td>
                    </tr>
                    <tr>
                        <td>Note :</td>
                        <td><textarea disabled="true" ><%= transText.note %></textarea></td>
                      </tr>
                      <tr>
                          <td>Ongkir :</td>
                          <td><input type="text" disabled="true" value="<%= transText.ongkir %>"></td>
                        </tr>
                        <tr>
                            <td>Berat :</td>
                            <td><input type="text" disabled="true" value="<%= totalBeratText %>"></td>
                          </tr>
                          <tr>
                              <td>Total Harga :</td>
                              <td><input type="text" disabled="true" value="<%= totalHargaText %>"></td>
                            </tr>
                            <tr>
                                <td>No Resi :</td>
                                <td>
                                  <% if(transText.no_resi) { %>
                                  <input type="text" disabled="true" value="<%= transText.no_resi %>">
                                  <% } else { %>
                                    <a href="/admin/transaction/resi/<%= transText.id %>">isi no resi</a>
                                    <% } %>
                                </td>
                              </tr>

            </table>
          </form>

        </body>
        </html>
